<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="plugin.audio.diyfm"
       name="diy.fm"
       version="0.0.1"
       provider-name="diy.fm">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <description lang="de">Hören Sie die schweizer Radioprogramme und Podcasts der SRG SSR</description>
        <description lang="en">Listen to Swiss radio stations and podcasts of SRG SSR</description>
        <description lang="fr">Écoutez les programmes et podcasts SRG SSR </description>
        <description lang="it">Ascoltare i programmi radio svizzere e podcast SRG SSR</description>
    </extension>
</addon>